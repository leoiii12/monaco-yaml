{
  "name": "monaco-yaml",
  "version": "2.1.1",
  "description": "YAML plugin for the Monaco Editor",
  "scripts": {
    "compile": "rimraf ./out && npm run compile:umd && npm run compile:esm",
    "compile:umd": "tsc -p ./src/tsconfig.json",
    "compile:esm": "tsc -p ./src/tsconfig.esm.json",
    "watch": "tsc -p ./src --watch",
    "prepublish": "rimraf ./out && rimraf ./release && npm run compile:umd && node ./scripts/bundle && mcopy ./src/monaco.d.ts ./release/monaco.d.ts",
    "lint": "prettier \"{src,test}/**/*.{json,scss,html,ts}\" --write",
    "test": "mocha --require ts-node/register --ui tdd --colors ./test/*.test.ts"
  },
  "author": "Kevin Decker <kpdecker@gmail.com> (http://incaseofstairs.com)",
  "maintainers": [
    "kpdecker",
    "pengx17"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pengx17/monaco-yaml"
  },
  "bugs": {
    "url": "https://github.com/pengx17/monaco-yaml/issues"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.9.3",
    "husky": "^1.2.1",
    "js-yaml": "^3.12.0",
    "jsonc-parser": "^2.0.2",
    "lint-staged": "^8.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "monaco-editor-core": "0.17.0",
    "monaco-languages": "1.7.0",
    "monaco-plugin-helpers": "^1.0.2",
    "prettier": "^1.15.3",
    "requirejs": "^2.3.5",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.12",
    "terser": "^4.1.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.1.6",
    "vscode-json-languageservice": "^3.2.0",
    "vscode-languageserver": "^5.2.1",
    "vscode-languageserver-types": "3.14.0",
    "vscode-uri": "^2.0.2",
    "yaml-language-server": "^0.4.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true
  },
  "lint-staged": {
    "linters": {
      "*.{json,scss,html,ts}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {}
}
