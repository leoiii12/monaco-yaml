{
  "name": "@leoiii12/monaco-yaml",
  "version": "2.2.0",
  "description": "YAML plugin for the Monaco Editor",
  "scripts": {
    "compile": "mrmdir ./out && tsc -p ./tsconfig.json",
    "watch": "tsc -p ./src --watch",
    "prepublish": "mrmdir ./release && npm run compile && node parcel.js && mcopy ./src/monaco.d.ts ./dist/monaco.d.ts",
    "lint": "prettier \"{src,test}/**/*.{json,scss,html,ts}\" --write",
    "test": "TS_NODE_PROJECT='tsconfig.test.json' mocha --require ts-node/register --ui tdd --colors 'test/*.test.ts'",
    "clean": "mrmdir ./out && mrmdir ./release"
  },
  "author": "Kevin Decker <kpdecker@gmail.com> (http://incaseofstairs.com)",
  "maintainers": [
    "kpdecker",
    "pengx17",
    "leoiii12"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leoiii12/monaco-yaml"
  },
  "bugs": {
    "url": "https://github.com/leoiii12/monaco-yaml/issues"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.9.3",
    "@types/prettier": "^1.16.4",
    "husky": "^1.2.1",
    "lint-staged": "^8.1.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-node": "^8.3.0",
    "typescript": "~3.1.6"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true
  },
  "lint-staged": {
    "linters": {
      "*.{json,scss,html,ts}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "js-yaml": "^3.12.0",
    "jsonc-parser": "^2.0.2",
    "monaco-editor-core": "^0.17.0",
    "monaco-languages": "^1.7.0",
    "monaco-plugin-helpers": "^1.0.2",
    "path-browserify": "^1.0.0",
    "regenerator-runtime": "^0.13.2",
    "requirejs": "^2.3.6",
    "vscode-json-languageservice": "^3.2.0",
    "vscode-languageserver": "^5.2.1",
    "vscode-languageserver-types": "^3.14.0",
    "vscode-uri": "^2.0.2",
    "yaml-ast-parser-custom-tags": "0.0.43",
    "yaml-language-server": "^0.4.1"
  },
  "alias": {
    "vscode-nls": "./src/fillers/vscode-nls.ts",
    "os": "./src/fillers/os.ts"
  }
}
